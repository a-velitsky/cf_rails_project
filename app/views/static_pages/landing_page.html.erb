<div id="product_carousel" class=" container carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
  	<% for i in 0..@products.count - 1 do %>
    	<li data-target="#poduct_carousel" data-slide-to="<%= i %>" class="active"></li>
    <% end %>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
  	<% @products.each do |product| %>
    	 <%= render partial: "product_preview", locals: {product: product} %>
    <% end %>
   </div>
  <!-- Controls -->
  <a class="left carousel-control" href="#product_carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#product_carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
